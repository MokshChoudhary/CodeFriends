<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#353535"
    tools:context=".templates.UserInfoDialog">


    <ImageView
        android:id="@+id/info_dialog_image"
        android:layout_width="360dp"
        android:layout_height="300dp"
        android:contentDescription="image of the user clicked"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="@+id/info_dialog_image"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/info_dialog_image"
        app:layout_constraintTop_toBottomOf="@+id/info_dialog_image">

        <TextView
            android:id="@+id/info_dialog_b1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="!"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/info_dialog_b2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="#"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/info_dialog_b3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="$"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/info_dialog_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="status"
        android:textColor="@color/primaryTextColor"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/info_dialog_name"
        app:layout_constraintTop_toBottomOf="@+id/info_dialog_name" />

    <TextView
        android:id="@+id/info_dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sanskriti Chouhdary"
        android:textColor="@color/primaryTextColor"
        android:layout_marginLeft="1dp"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/info_dialog_image"
        app:layout_constraintTop_toBottomOf="@+id/info_dialog_image"
        android:layout_marginStart="1dp" />

    <View
        android:id="@+id/view"
        android:layout_width="360dp"
        android:layout_height="2dp"
        android:background="@color/primaryTextHintColor"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="@+id/info_dialog_image"
        app:layout_constraintStart_toStartOf="@+id/info_dialog_image" />

</androidx.constraintlayout.widget.ConstraintLayout>